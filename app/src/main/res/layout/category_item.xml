<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:focusable="true"
    app:cardCornerRadius="9dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="#260B6E4F"
        android:background="@drawable/cat_container_back">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:foreground="@drawable/cat_container_back"
            android:src="@drawable/cat_confidence"
            android:padding="1dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="3:1" />



    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wisdom"
        android:layout_gravity="center"
        android:shadowDx="2"
        android:paddingBottom="3dp"
        android:gravity="center"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:shadowColor="@color/black"
        android:fontFamily="@font/space_grotesk_regular"
        android:textStyle="bold"
        android:background="@drawable/txt_back"
        android:paddingHorizontal="8dp"
        android:letterSpacing="0.04"
        android:textSize="25sp"
        android:textColor="@color/qc_light_green"/>

</androidx.cardview.widget.CardView>