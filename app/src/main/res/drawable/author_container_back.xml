<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>

            <corners
                android:radius="8dp"/>

            <stroke
                android:width="2dp"
                android:color="@color/very_light_green"/>

            <solid
                android:color="#660B6E4F"/>

        </shape>

    </item>

    <item>

        <shape>


            <corners
                android:radius="8dp"/>

            <stroke
                android:width="1dp"
                android:color="@color/very_light_green"/>

            <solid
                android:color="#990B6E4F"/>


        </shape>

    </item>

</selector>